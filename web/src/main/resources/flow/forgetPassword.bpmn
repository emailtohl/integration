      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow10" id="BPMNEdge_flow10">
        <omgdi:waypoint x="474.0" y="167.0"></omgdi:waypoint>
        <omgdi:waypoint x="562.0" y="164.0"></omgdi:waypoint>
        <omgdi:waypoint x="562.0" y="125.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow11" id="BPMNEdge_flow11">
        <omgdi:waypoint x="615.0" y="97.0"></omgdi:waypoint>
